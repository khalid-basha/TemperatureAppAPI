@model IEnumerable<TemperatureApi.Models.TemperatureReading>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Temperature History</title>
</head>
<body>
    <h1>Temperature History</h1>
    <table border="1">
        <thead>
            <tr>
                <th>ID</th>
                <th>Temperature</th>
                <th>Time</th>
                <th>Device ID</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var reading in Model)
                {
                    <tr>
                    <td>@reading.ID</td>
                    <td>@reading.TempValue</td>
                    <td>@reading.Time</td>
                    <td>@reading.DeviceId</td>
                    </tr>
                }
            }
            else
            {
                <p>No temperature readings available.</p>
            }
        </tbody>
    </table>
</body>
</html>
